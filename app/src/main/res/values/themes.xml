<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatherInfo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme.WeatherInfo" parent="Base.Theme.WeatherInfo" />

    <!--TextView Style-->
    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/forecast_text_color</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!--View Style-->
    <style name="ViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.9dp</item>
        <item name="android:background">@color/view_color</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!--RecyclerView Style-->
    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:paddingTop">@dimen/dimen_16dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">@dimen/dimen_16dp</item>
    </style>

    <!--LinearLayout Style-->
    <style name="LinearLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">@dimen/dimen_56dp</item>
        <item name="android:paddingBottom">@dimen/dimen_62dp</item>
    </style>

</resources>